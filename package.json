{
  "name": "mcsmanager-workspace",
  "version": "1.0.0",
  "packageManager": "bun@1.1.0",
  "workspaces": [
    "common",
    "daemon",
    "frontend",
    "panel"
  ],
  "scripts": {
    "i18n": "i18next-scanner --config i18-scanner.config.js",
    "build": "turbo build",
    "preview-build": "turbo build --filter=common",
    "daemon": "turbo dev --filter=mcsmanager-daemon",
    "frontend": "turbo dev --filter=mcsmanager-ui",
    "panel": "turbo dev --filter=mcsmanager-panel"
  },
  "devDependencies": {
    "crc": "^4.3.2",
    "i18next-scanner": "^4.4.0",
    "turbo": "^2.0.9"
  }
}
