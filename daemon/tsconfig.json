{
  "compilerOptions": {
    "skipLibCheck": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@languages/*": ["../languages/*"],
      "mcsmanager-common": ["../common/src/index.ts"],
      "fs-extra": ["node_modules/@types/fs-extra/index.d.ts"],
      "os-utils": ["node_modules/@types/os-utils/index.d.ts"],
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*", "../common/global.d.ts"]
}
